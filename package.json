{
    "name": "canopy-plugin-typescript",
    "version": "1.0.0",
    "description": "TypeScript implementation of the Canopy blockchain plugin",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "build:watch": "tsc -p tsconfig.build.json --watch",
        "start": "node dist/main.js",
        "start:plugin": "node dist/main.js",
        "dev": "nodemon --exec ts-node src/main.ts",
        "dev:inspect": "nodemon --exec 'ts-node --inspect src/main.ts'",
        "type-check": "tsc --noEmit",
        "type-check:watch": "tsc --noEmit --watch",
        "test": "jest",
        "test:unit": "jest test/unit",
        "test:integration": "FSM_INTEGRATION_TESTS=true jest test/integration",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:verbose": "VERBOSE_TESTS=true jest --verbose",
        "test:type-coverage": "typescript-coverage-report",
        "lint": "eslint src/ test/ --ext .ts,.js",
        "lint:fix": "eslint src/ test/ --ext .ts,.js --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "build:proto": "pbjs -t static-module -w commonjs -o src/proto/index.js proto/*.proto && pbts -o src/proto/index.d.ts src/proto/index.js",
        "clean": "rm -rf dist/ coverage/ test-results/ node_modules/.cache/",
        "clean:proto": "rm -f src/proto/index.js src/proto/index.d.ts",
        "prebuild": "npm run clean && npm run type-check",
        "validate": "npm run lint && npm run type-check && npm run test:unit && npm run format:check",
        "precommit": "npm run validate",
        "prepublishOnly": "npm run build",
        "audit": "npm audit --audit-level=moderate",
        "audit:fix": "npm audit fix"
    },
    "keywords": [
        "blockchain",
        "canopy",
        "plugin",
        "typescript",
        "server",
        "node"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "long": "^5.2.3",
        "protobufjs": "^7.5.4"
    },
    "devDependencies": {
        "@types/jest": "^29.5.8",
        "@types/long": "^4.0.2",
        "@types/node": "^20.19.11",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-security": "^1.7.1",
        "jest": "^29.7.0",
        "jest-junit": "^16.0.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.0",
        "protobufjs-cli": "^1.1.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2",
        "typescript-coverage-report": "^0.8.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE"
    ]
}
